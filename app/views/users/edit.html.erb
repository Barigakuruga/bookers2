<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <%= form_with model: @user do |f| %>
        <% if @user.errors.any? %>
        <h3>
          <%= @user.errors.count %> error prohibited this obj from being saved:
        </h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>
        <div class="form-group">
          <%= f.label :Name %><br >
          <%= f.text_field :name, autofocus: true, autocomplete: "Name", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :Image %><br >
          <%= f.file_field :profile_image, accept: "image/*", class:"form-control-file" %>
        </div>
        <div class="form-group">
          <%= f.label :Introduction %><br >
          <%= f.text_area :introduction, autofocus: true, autocomplete: "Introduction", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %><br >
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>