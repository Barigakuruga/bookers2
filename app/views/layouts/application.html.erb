<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <nav class="navbar navbar-expnad-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">
          <span>Bookers</span>
        </a>
        <% if user_signed_in? %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown" style>
          <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to " Home ", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to " Users ", users_path, class: 'nav-link text-light' %>
            <li>
              <%= link_to " Books ", books_path, class: 'nav-link text-light' %>
            <li>
              <%= link_to " Log out ", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
            </li>
            <% else %>
            <li>
              <%= link_to " Home ", root_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to " About ", home_about_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to " Sign up ", new_user_registration_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to " Log in ", new_user_session_path, class: 'nav-link text-light' %>
            </li>
          </ul>
        </div>
        <% end %>
      </div>
    </nav>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
